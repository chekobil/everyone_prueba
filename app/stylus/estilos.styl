$rojo = #dc0000
$font-family = 'Open Sans',sans-serif

body
  font-family $font-family
div
	border 0px solid blue

img
	border 0px dotted green

.nav-pills
	margin 1em auto
.nav-pills .nav-link
	padding 1em 2em
	margin 0 0.2em
	border-radius 0
	border 2px solid $rojo
	background $rojo
	color white
	&:hover
		background white
		color $rojo
		border 2px solid $rojo

.header
	height 30em
	background-image url(app/img/header_ascensor.jpg)
	background-repeat no
	background-position center
	background-size 115% 100%


.logobox
	height 7em
	background-color white
	z-index 999
	img
		margin-top 0.3em
		height 5em
.claim
	height 12em
	background $rojo
	.texto_claim
		padding-top 2em
		padding-left 3.8em
		color white
		h2
			font-weight bold
			font-size 37px
	.foto_claim
		img
			width 210px
			margin-top -15px

.registro-header
	margin-top 3em

.formulario
	padding 1em 2em 2em 2em
	div
		font-size 18px
		line-height 1.37em
	h4
		color $rojo
		font-weight bold
	.texto_bases
		margin-top 3em
		label
			font-size 12px
	.texto_bases_dos
		margin-top 0.5em
		label
			font-size 12px
.boton_rojo
	margin-top 0.3em
	padding 0.1em 5em
	font-size 22px
	border-radius 0
	border 2px solid $rojo
	background $rojo
	color white
	&:hover
		background white
		color $rojo
		border 2px solid $rojo

.boton_rojo_mini
	position fixed
	right 0
	bottom 0
	padding 0.1em 1em
	font-size 12px
	border-radius 0
	border 2px solid $rojo
	background white
	color $rojo
	&:hover
		background $rojo
		color white
		border 2px solid $rojo

.footer
	padding-bottom 2em
	.copyright
		font-size 12px

.centered-x
	position absolute
    left 50%
    transform translate(-50%, 0)

.bottom
	position fixed
    bottom 0


#form-alert-success, #form-alert-error, #form-alert-info
	display none

.input-error
	border 3px solid $rojo


@media (max-width: 850px)
	.header
		height 25em
	.claim
		.texto_claim
			padding-top 2em
			padding-left 0em
			h2
				font-size 28px


@media (max-width: 600px)
	.header
		height 20em
	.logobox
		height 5em
		img
			margin-top 0.2em
			height 3em
	.claim
		height 9em
		.texto_claim
			padding-top 1em
			padding-left 0em
			h2
				font-size 25px
		.foto_claim
			img
				width 160px
				margin-top -15px
	.nav-pills .nav-link
		width 48%
		margin-bottom 0.3em
		font-size 22px


@media (max-width: 480px)
	.header
		height 15em
	.logobox
		height 4em
		img
			margin-top 0.2em
			height 3em
	.nav-pills .nav-link
		width 100%
		margin-bottom 0.3em
		font-size 22px
